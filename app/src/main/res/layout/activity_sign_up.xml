<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="#3A4A64"
android:layout_height="match_parent"
tools:context=".SignUpActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:layout_height="wrap_content">




    <EditText
        android:id="@+id/firstnametxt"
        android:inputType="text"
        android:padding="4dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFF"
        android:hint="First Name"
        android:layout_width="220dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/lastnametxt"
        android:inputType="text"
        android:padding="4dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFF"
        android:hint="Last Name"
        android:layout_width="220dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/phonetxt"
        android:hint="Phone Number"
        android:padding="4dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFF"
        android:inputType="phone"
        android:layout_width="220dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/passwordRegTxt"
        android:hint="Password"
        android:padding="4dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFF"
        android:inputType="textPassword"
        android:layout_width="220dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/confirmpassword"
        android:hint="Confirm Password"
        android:padding="4dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFF"
        android:inputType="textPassword"
        android:layout_width="220dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/groupnum"
        android:hint="Group Number"
        android:padding="4dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFF"
        android:inputType="number"
        android:layout_width="220dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:background="@mipmap/ic_profilepic_placeholder"
        android:id="@+id/profilePictureImg"
        android:padding="4dp"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <Button
        android:text="Profile Photo"
        android:onClick="openImageOptions"
        android:background="#FF4086"
        android:id="@+id/addpicture"
        android:layout_width="220dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/signupbtn"
        android:onClick="registerNewUser"
        android:background="#FF4086"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Sign Up"
        android:layout_width="220dp"
        android:layout_height="wrap_content" />



</LinearLayout>



</RelativeLayout>